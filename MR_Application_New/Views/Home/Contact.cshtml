@{
    ViewData["Title"] = "Contact Us";
}
<style>
    /* General Page Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        margin-top: 40px;
        padding: 0 20px;
    }

    .navbar-nav .nav-link:hover {
        color: #ffffff;
        background-color: rgba(0, 0, 0, 0.2);
    }


    /* General styling for headings */
.section-title {
    font-size: 2rem;
    font-weight: 600;
    color: #333;
    text-align: center;
    margin-bottom: 20px;
    text-transform: uppercase;
}

.info-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #007bff;
    margin-bottom: 20px;
    text-align: center;
}

/* Styling for contact information */
.contact-info {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 30px;
}

.contact-info p {
    font-size: 1.1rem;
    color: #555;
}

.contact-info a {
    color: #007bff;
    text-decoration: none;
}

.contact-info a:hover {
    text-decoration: underline;
}

/* Form Container */
.form-container {
    background-color: #ffffff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    margin: 0 auto;
}

/* Form fields */
.form-control {
    border-radius: 8px;
    box-shadow: none;
    border: 1px solid #ccc;
    padding: 12px;
    font-size: 1rem;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

/* Button styling */
.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    font-size: 1.1rem;
    padding: 12px 25px;
    border-radius: 8px;
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* Mobile responsiveness */
@@media (max-width: 768px) {
    .form-container {
        padding: 20px;
        width: 90%;
    }

    .section-title, .info-title {
        font-size: 1.5rem;
    }

    .btn-primary {
        width: 100%;
    }
}

</style>


<h2 class="section-title">We would love to hear from you! Please reach out using the information below.</h2>

<div class="contact-info">
    <h2 class="info-title">Contact Information</h2>
    <p>
        <strong>Email:</strong> <a href="mailto:support@example.com">support@example.com</a><br />
        <strong>Phone:</strong> <strong>(123) 456-7890</strong><br />
        <strong>Address:</strong> <strong>123 Main St, Anytown, USA</strong>
    </p>
</div>

<h2 class="section-title">Send Us a Message</h2>

<div class="form-container">
    <form method="post" action="/Home/Contact">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" required />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message</label>
            <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
    </form>
</div>
