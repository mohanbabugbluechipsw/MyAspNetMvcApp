@{
    ViewData["Title"] = "Session Expired";
    Layout = null; // disables the layout (_Layout.cshtml)
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            animation: fadeInBody 1s ease-in-out;
        }

        @@keyframes fadeInBody {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        .card {
            animation: zoomInCard 0.8s ease;
            border: 2px solid #dc3545;
            border-radius: 20px;
        }

        @@keyframes zoomInCard {
            from

        {
            transform: scale(0.8);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }

        }

        h2 {
            font-weight: 700;
        }

        .btn-primary {
            background-color: #007bff;
            border-radius: 25px;
            padding: 10px 30px;
            font-size: 1.1rem;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="card shadow-lg p-5">
                    <h2 class="text-danger mb-3">Session Expired</h2>
                    <p class="lead">You were inactive for too long. Please log in again to continue.</p>
                    <a href="/Login/logout" class="btn btn-primary mt-4">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
