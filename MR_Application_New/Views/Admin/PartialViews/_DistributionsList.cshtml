@{
    ViewData["Title"] = "Add New Distribution";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Model_New.Models.TblDistributor>

<div class="container mt-3">
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["AlertMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <h3 class="mb-4">
        <i class="bi bi-eye"></i> Distribution List
    </h3>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Code</th>
                <th>Name</th>
           
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var distribution in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@distribution.Distributor</td>
                        <td>@distribution.DistributorName</td>
                   
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No distributions available.</td>
                </tr>
            }
        </tbody>
    </table>


    <div class="form-group">

        <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-primary btn-lg d-inline-flex align-items-center">
            <i class="bi bi-house-door me-2"></i> Back Home
        </a>
    </div>
</div>
