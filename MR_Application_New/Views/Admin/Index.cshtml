@{
    ViewData["Title"] = "Admin Control Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">
        <i class="bi bi-tools"></i> Admin Control Panel
    </h2>

    <div class="admin-dashboard text-center">
        <p class="lead mb-4">Welcome to the Admin Control Panel! Manage distributions, view reports, and configure system settings.</p>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-4">
            <!-- Add Distribution -->
            <div class="col">
                <div class="card shadow-lg border-0 rounded-3 h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">
                            <i class="bi bi-plus-circle"></i> Add Distribution
                        </h5>
                        <p class="card-text">Create a new distribution by adding relevant details.</p>
                        <a href="/Admin/AddDistribution" class="btn btn-success btn-lg">Add New</a>
                    </div>
                </div>
            </div>

            <!-- View Distributions -->
            <div class="col">
                <div class="card shadow-lg border-0 rounded-3 h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">
                            <i class="bi bi-eye"></i> View Distributions
                        </h5>
                        <p class="card-text">Browse and manage existing distributions in the systema.</p>
                        <a href="/Admin/DistributionsList" class="btn btn-primary btn-lg">View All</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-4">
            <!-- User Management (Add MR Master) -->


            <!-- Application Settings (Outlet Create) -->
            <div class="col">
                <div class="card shadow-lg border-0 rounded-3 h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">
                            <i class="bi bi-sliders"></i> Outlet Settings
                        </h5>
                        <p class="card-text">Create or manage outlet details for your business.</p>
                        <a href="@Url.Action("Outletcreate", "Admin")" class="btn btn-warning btn-lg">Create Outlet</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
