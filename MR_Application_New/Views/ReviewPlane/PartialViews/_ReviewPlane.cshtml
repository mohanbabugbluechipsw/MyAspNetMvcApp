<div class="container review-container">
    <h3 class="review-header">
        <i class="fas fa-clipboard-check me-2"></i>Review Plan
    </h3>

    <div class="row g-3">
        <!-- MR Code -->
        <div class="col-12 col-md-6">
            <div class="form-card">
                <label class="form-label">MR Name:</label>
                <input type="text" id="mrNameInput" class="form-control"
                       value="@User.Identity.Name" readonly>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="form-card">
                <label class="form-label">RSCODE:</label>
                <div class="input-group">
                    <input type="text" id="rscodeInput" class="form-control"
                           placeholder="RSCODE will auto-fill" readonly>
                    <button id="refreshRscodeBtn" class="btn btn-outline-secondary" type="button">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                </div>
                <input type="hidden" id="selectedRscode">
            </div>
        </div>

        <!-- Action Buttons - Responsive Group -->
        <div class="col-12">
            <div class="btn-group-responsive">
                <button id="openSrModal" class="btn btn-danger action-btn">
                    <i class="fas fa-user-tie me-2"></i>
                    <span>Select SR</span>
                </button>
                <button id="openRouteFilterModal" class="btn btn-primary action-btn">
                    <i class="bi bi-funnel me-2"></i>
                    <span>Filter Route</span>
                </button>
                <button id="clearRouteFilter" class="btn btn-warning action-btn">
                    <i class="bi bi-x-circle me-2"></i>
                    <span>Clear Filter</span>
                </button>
            </div>
        </div>

        <!-- Selected SR Display -->
        <div class="col-12">
            <div class="form-card">
                <label class="form-label">Selected SR Name:</label>
                <input type="text" id="selectedSrInput" class="form-control" readonly>
            </div>
        </div>

        <!-- Selected Route Display -->
        <div class="col-12">
            <div class="form-card">
                <label class="form-label">Selected Route:</label>
                <input type="text" id="selectedRouteInput" class="form-control" readonly>
                <input type="hidden" id="selectedRoute">
            </div>
        </div>

        <!-- Outlet Search Section -->
        <div class="col-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-store me-2"></i>Outlet Search</h5>
                </div>
                <div class="card-body">
                    <div class="form-group position-relative">
                        <label for="outletInput" class="form-label">Search Outlet</label>
                        <input type="text" id="outletInput" class="form-control"
                               placeholder="Type outlet name or code (min 3 characters)...">
                        <input type="hidden" id="selectedOutlet">
                        <div id="outletSuggestions" class="list-group mt-1"
                             style="display: none; max-height: 400px; overflow-y: auto; position: absolute; z-index: 1000; width: 100%;"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Outlet Details Section -->
        <div class="col-12">
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Outlet Details</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Outlet Name</label>
                                <input type="text" id="outlet-name" class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Outlet Code</label>
                                <input type="text" id="outlet-code" class="form-control" readonly>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Outlet Sub Type</label>
                                <input type="text" id="outlet-sub-type" class="form-control" readonly>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Address</label>
                                <textarea id="outlet-address" class="form-control" rows="2" readonly></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Route Name</label>
                                <input type="text" id="outlet-route" class="form-control" readonly>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Child Party</label>
                                    <input type="text" id="outlet-child-party" class="form-control" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Servicing PLG</label>
                                    <input type="text" id="outlet-plg" class="form-control" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <input type="hidden" id="photoCaptured" name="PhotoUrl" />
        <input type="hidden" name="Latitude" id="Latitude" />
        <input type="hidden" name="Longitude" id="Longitude" />
        <input type="hidden" name="DeviceInfo" id="DeviceInfo" />
        <input type="hidden" name="DeviceType" id="DeviceType" />

        <!-- Photo Section -->
        <div class="col-12">
            <div class="form-card text-center">
                <div class="d-flex flex-column flex-md-row justify-content-center align-items-center gap-3">
                    <!-- Camera input (hidden) -->
                    <input type="file" id="cameraInput" accept="image/*" capture="environment" class="d-none">

                    <!-- Capture button that triggers the file input -->
                    <button id="openCameraBtn" class="btn btn-success action-btn">
                        <i class="fas fa-camera me-2"></i>
                        <span>Capture Photo</span>
                    </button>

                    <!-- Preview container -->
                    <div id="photoPreviewContainer" class="position-relative d-none">
                        <img id="capturedImage" class="photo-preview img-fluid clickable-image">
                        <button id="retakePhotoBtn" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2">
                            <i class="fas fa-redo"></i>
                        </button>
                    </div>
                </div>

                <p id="photoError" class="text-danger mt-2 d-none">
                    <i class="fas fa-exclamation-circle me-2"></i>Please capture a photo
                </p>
            </div>
        </div>

        <!-- Image Preview Modal -->
        <div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Photo Preview</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center">
                        <img id="modalPreviewImage" class="img-fluid" style="max-height: 80vh;">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="col-12">
            <div class="btn-group-responsive justify-content-center">
                <button id="saveReview" class="btn btn-success btn-lg">
                    <i class="fas fa-save me-2"></i>Save Data
                </button>
                <button id="nextStep1" class="btn btn-primary btn-lg" disabled>
                    <span>Next</span>
                    <i class="fas fa-arrow-right ms-2"></i>
                </button>
            </div>
            <p id="saveSuccessMsg" class="text-success mt-2 d-none fw-bold text-center">
                <i class="fas fa-check-circle me-2"></i>Saved Successfully
            </p>
        </div>
    </div>
</div>

